<h1>Listing Contents</h1>

<div class="row">
  <% @course_contents.each do |content| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= content.title %></h3>
        <% if content.content.length > 100 %>
        <p><%= content.content.truncate(100) %></p>
        <% else %>
          <%= content.content %>
        <% end %>
        <p><%= link_to 'Show', course_content_path(@course, content), class: "btn btn-primary" %></a>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>


