<h1>Listing Contents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <% if content.content.length > 100 %>
          <td><%= strip_tags(content.content.truncate(100)) %></td>
        <% else %>
          <td><%= strip_tags(content.content) %></td>
        <% end %>
        <td><%= content.status %></td>
        <td><%= content.course.name %></td>
        <td><%= link_to 'Show', admin_content_path(content) %></td>
        <td><%= link_to 'Edit', edit_admin_content_path(content) %></td>
        <td><%= link_to 'Destroy', admin_content_path(content), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Content', new_admin_content_path, class: "btn btn-primary" %>

