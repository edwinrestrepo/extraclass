<p id="notice"><%= notice %></p>

<h1>Listing Contents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <td><%= content.content %></td>
        <td><%= content.status %></td>
        <td><%= link_to 'Show', content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

