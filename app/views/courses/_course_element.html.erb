<div class="course-element">

  <div class="row task-list-header">

    <div class="col-md-4 text-center">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRUnL4mKrUeFR0CFMk0fSdmoE1CKHE9cuT7Apsa6VEpa2vYnF1A" alt="" class="img-circle" width="100" height="100">
    </div>

    <div class="col-md-8">
      <h4><%#= link_to task_list.description, task_list_tasks_path(task_list) %></h4>
      <div class="progress">
        <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
          <span class="sr-only"></span>
          60%
        </div>
      </div>
    </div>

  </div>

  <div class="row text-center task-list-info">
    <div class="col-md-3">
      <em><%#= task_list.status.capitalize %></em>
      <p class="title">status</p>
    </div>
    <div class="col-md-3">
      <em><%#= task_list.updated_at.to_formatted_s(:short)  %></em>
      <p class="title">Last Update</p>
    </div>
    <div class="col-md-3">
      <em>10</em>
      <p class="title">People involved</p>
    </div>
    <div class="col-md-3">
      <em>8</em>
      <p class="title">Tasks</p>
    </div>
  </div>

</div>